      - name: "ðŸ’« Get Toolchain (Resilient)"
        working-directory: ./${{ env.kernelDir }}
        run: |
          # Use a public link that doesn't prompt for auth
          git clone --depth=1 https://github.com/ZyCromerZ/Clang.git -b main zyc-clang
          
          # If the clone succeeded, add to path
          if [ -d "zyc-clang/bin" ]; then
             echo "$(pwd)/zyc-clang/bin" >> $GITHUB_PATH
          else
             echo "Clone failed, toolchain folder missing" && exit 1
          fi

